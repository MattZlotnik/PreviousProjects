@model sp18Team7Final.Models.Showtime
@using sp18Team7Final.Models

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<font color="red">@ViewBag.TimeError</font>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Showtime</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ShowtimeID)

    <div class="form-group">
        @Html.LabelFor(model => model.Movie.Title, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DisplayFor(model => model.Movie.Title, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Movie.Title, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.StartTime, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.StartTime, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.StartTime, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Movie.Runtime, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DisplayFor(model => model.Movie.Runtime, new { htmlAttributes = new { @class = "form-control" } }) Minutes
            @Html.ValidationMessageFor(model => model.Movie.Runtime, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
            <div class="col-md-10">Theater:
        @if (Model.Theater == 1)
        {
                <label class="radio">@Html.RadioButton("SelectedTheater", 1, true)1</label>
                <label class="radio">@Html.RadioButton("SelectedTheater", 2)2</label>
        }
        else
        {
                <label class="radio">@Html.RadioButton("SelectedTheater", 1)1</label>
                <label class="radio">@Html.RadioButton("SelectedTheater", 2, true)2</label>
        }
            </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.SpecialEvent, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <div class="checkbox">
                @Html.EditorFor(model => model.SpecialEvent)
                @Html.ValidationMessageFor(model => model.SpecialEvent, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "RemoveFromSchedule", "Schedules", new { ScheduleID = Model.Schedule.ScheduleID }, null)
</div>
