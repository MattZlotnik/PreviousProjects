@model sp18Team7Final.Models.Showtime
@{
    ViewBag.Title = "AddToSchedule";
}

<h2>AddToSchedule</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger"})
        @Html.HiddenFor(model => model.Schedule.ScheduleID)
        @Html.HiddenFor(model => model.ShowtimeID)
        @*TODO: Any other hiddenfors*@

        <div class="form-group">
            Time: <input type="time" name="datSelectedTime" class=" form-control" /> <br />
            <font color="red">@ViewBag.TimeError</font> <br />

            Theater Number:
            <label class="radio">@Html.RadioButton("SelectedTheater", 1)Theater 1</label>
            <label class="radio">@Html.RadioButton("SelectedTheater", 2)Theater 2</label> <br />
            <font color="red">@ViewBag.TheaterError</font> <br />

            Is this a special event?
            <label class="radio">@Html.RadioButton("SpecialEvent", false, true)No</label>
            <label class="radio">@Html.RadioButton("SpecialEvent", true)Yes</label> <br />
            <br />

            What movie would you like to schedule (Must enter exact title)? <br />
            @Html.TextBox("MovieTitle", null, new { @class = "form-control" }) <br />
            <font color="red">@ViewBag.MovieTitleError</font><br />

        </div>

        <div class="form-group">
            <div class="col-md-offset-to col-md-10">
                <input type="submit" value="Add to Schedule" class="btn btn-default" />
            </div>
        </div>
    </div>

}

