@model IEnumerable<sp18Team7Final.Models.Schedule>

@{
    ViewBag.Title = "AllSchedules";
}
@*TODO: only for managers*@
<h2>AllSchedules</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ScheduleDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Completed)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ScheduleDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Completed)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.ScheduleID }) |
            @Html.ActionLink("Details", "Details", new { id = item.ScheduleID })
        </td>
    </tr>
}

</table>
