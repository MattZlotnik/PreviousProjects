@model sp18Team7Final.Models.Ticket

@{
    ViewBag.Title = "EditTicket";
}

<h2>Change Seat</h2>
<font color="red">@ViewBag.SeatError</font>
@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.TicketID)
    <div class="form-group">
        <div class="col-md-10">
            @Html.DropDownList("SelectedSeat", (SelectList)ViewBag.AvailableTickets, new { multiple = "multiple" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Select Seat" class="btn btn-default" />
        </div>
    </div>
}


