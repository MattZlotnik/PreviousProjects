@model sp18Team7Final.Models.Order
@using sp18Team7Final.Controllers
@using sp18Team7Final.Models

@{
    ViewBag.Title = "Create";
}

<h2>Add to cart</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(o => o.OrderID)

<div class="form-horizontal">
    @Html.HiddenFor(model => Model.OrderID)
    <h4>Add to cart</h4>
    <hr />
    <font color="red">@ViewBag.Error</font>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <dt>Movie</dt>
    <dd>@ViewBag.Movie</dd>
    <dt>Which Showtime?</dt>

    <font color="red">@ViewBag.DuplicateMovie</font>
    <div class="form-group">
        <div class="col-md-10">
            @Html.DropDownList("SelectedShowtime", (SelectList)ViewBag.showtimes, new { multiple = "multiple" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Select Showtime" class="btn btn-default" />
        </div>
    </div>

</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
