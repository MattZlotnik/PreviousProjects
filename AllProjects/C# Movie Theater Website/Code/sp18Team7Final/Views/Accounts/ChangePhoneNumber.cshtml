@model sp18Team7Final.Models.ChangePhoneNumberViewModel
<h2>Change Address</h2>
@using (Html.BeginForm("ChangePhoneNumber", "Accounts", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Change Phone Number Form</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.NewPhoneNumber, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.NewPhoneNumber, new { type = "date" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Change phone number" class="btn btn-default" />
        </div>
    </div>
}